---
import Button from "@components/Button.astro";
import WindowsLogo from "phosphor-astro/WindowsLogo.astro";
import AppleLogo from "phosphor-astro/AppleLogo.astro";
import LinuxLogo from "phosphor-astro/LinuxLogo.astro";
---

<ul>
    <li class="flex gap-1 ">
        <header>
            <WindowsLogo width={20}/>
            <h6>Windows</h6>
        </header>
        <div>
            <Button variant="bordered">
                Windows (Msi)
            </Button>
            <Button variant="bordered">
                Windows (Exe)
            </Button>
        </div>
    </li>
    <li class="flex gap-1 border-x border-x-neutral-100">
        <header>
            <AppleLogo width={20}/>
            <h6>MacOS</h6>
        </header>
        <div>
            <Button variant="bordered">
                MacOS (Dmg)
            </Button>
        </div>
    </li>
    <li class="flex gap-1 ">
        <header>
            <LinuxLogo width={20}/>
            <h6>Linux</h6>
        </header>
        <div>
            <Button variant="bordered">
                Linux (AppImage)
            </Button>
            <Button variant="bordered">
                Linux (Deb)
            </Button>
            <Button variant="bordered">
                Linux (Rpm)
            </Button>
        </div>
    </li>
</ul>

<style>
    ul{
        display: flex;
        width: 100%;
        max-width: 1450px;
    }

    li{
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding: 0 16px;

        header{
            display: flex;
            align-items: center;
            gap: 8px;
        }

        div{
            display: flex;
            flex-direction: column;
            gap: 24px;

            button{
                width: 100%;
            }
        }
    }

    h6{
        font-weight: var(--font-weight-medium);
    }
</style>
